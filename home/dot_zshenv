export ZDOTDIR="$HOME/.config/zsh"
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share
export XDG_STATE_HOME=$HOME/.local/state
export WORKSPACE=$HOME/Documents/workspace
export PACKAGES=$HOME/.packages
export GOPATH=$PACKAGES/go
export GOMODCACHE=$PACKAGES/go/pkg/mod
export GOCACHE=$PACKAGES/go/cache
export NPM_CONFIG_PREFIX=$PACKAGES/npm
export NPM_CONFIG_CACHE=$PACKAGES/npm/cache
export NPM_CONFIG_TMP=$PACKAGES/npm/tmp
export CARGO_HOME=$PACKAGES/cargo
export RUSTUP_HOME=$PACKAGES/rustup
