# navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias c='clear'

# directory
alias ls='ls -G'
alias la='ls -lAh'
alias ll='ls -lh'
alias md='mkdir -p'

# tools
alias docker-compose='docker-cli-plugin-docker-compose'
alias top='gotop'
alias cat='bat'

# mise
alias update-nvim='mise uninstall neovim stable && mise install neovim stable'

# claude
alias git_commit_message_claude="git diff --staged | claude -p 'Write commit message for the change with commitizen convention. Make sure the title has maximum 50 characters and message is wrapped at 72 characters. Return ONLY plain text, no markdown, no code blocks, no formatting, no backticks.'"
alias clcm='git commit -m "$(git_commit_message_claude 2>/dev/null)"'