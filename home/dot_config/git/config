[alias]
  alias = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\ => \\2/' | sort
  a = !git add -A && git status
  au = !git add -u && git status
  ap = !git add -p && git status
  ru = remote update -p
  rup = !git remote update -p && git pull origin $(git symbolic-ref refs/remotes/origin/HEAD --short 2>/dev/null | sed 's@^origin/@@' || echo main)
  rb = rebase --interactive
  rbc = rebase --continue
  rv = revert
  rvm = revert -m 1
  cm = commit
  cam = commit --amend
  wip = commit -m 'wip'
  st = status
  sw = switch
  swc = switch -c
  lo = log --oneline
  graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  cancel = reset --soft HEAD^
  merge-plan = merge --no-commit --no-ff
