#!/bin/bash
set -euo pipefail

# Skip in CI environment
if [ -n "${CI:-}" ] || [ -n "${GITHUB_ACTIONS:-}" ]; then
    echo "Skipping mise tools installation in CI environment"
    exit 0
fi

echo "Installing mise tools..."

# Ensure mise is available
if ! command -v mise &>/dev/null; then
    echo "Error: mise is not installed. Please run brew bundle first."
    exit 1
fi

# Debug mise configuration
echo "Debug: mise config file locations:"
echo "  ~/.config/mise/config.toml: $([ -f ~/.config/mise/config.toml ] && echo "exists" || echo "missing")"
echo "  .mise.toml: $([ -f .mise.toml ] && echo "exists" || echo "missing")"
echo "Debug: mise config files:"
mise config || echo "No config found"
echo "Debug: mise ls-remote:"
mise ls-remote docker 2>/dev/null | head -5 || echo "Failed to list docker versions"

# Install all mise tools
echo "Running mise install..."
mise install

# Activate mise for current shell
eval "$(mise activate bash)"

echo "mise tools installed successfully!"